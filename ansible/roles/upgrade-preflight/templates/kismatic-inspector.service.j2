[Unit]
Description=Kismatic Inspector
Documentation=https://github.com/apprenda/kismatic

[Service]
User=root
ExecStart={{ bin_dir }}/kismatic-inspector server \
  --node-roles={{ group_names|join(",") }} \
  --port=8888 \
  --enforcePackages={% if allow_package_installation|bool %}false{% else %}true{% endif %} \
  --disconnected-installation={% if disconnected_installation|bool %}true{% else %}false{% endif %}

[Install]
WantedBy=multi-user.target
